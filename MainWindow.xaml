<Window x:Class="superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:superheroes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ConvertidorImagen x:Key="ConvertidorImagen"></local:ConvertidorImagen>
    </Window.Resources>
    <DockPanel x:Name="DockPanelPrincipal">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" Text="{Binding Path=Nombre}"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <!--Fotos-->
            </StackPanel>
        </DockPanel>
        <Grid DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <TextBlock>1/3</TextBlock>
        </Grid>
        <Image Source="{Binding Path=Imagen, Converter={StaticResource ConvertidorImagen}}"></Image>
    </DockPanel>
</Window>
